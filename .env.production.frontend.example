# FairPact Frontend - Production Environment Variables
# Copy this file to .env.production.frontend and fill in your actual values

# ===== API =====
# This must be the public URL of the backend API
NEXT_PUBLIC_API_URL=https://fairpact.pl/api/v1
NEXT_PUBLIC_API_VERSION=v1

# ===== MONITORING =====
# Sentry
NEXT_PUBLIC_SENTRY_DSN=

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# ===== FEATURE FLAGS =====
NEXT_PUBLIC_ENABLE_AI_MODE=true
NEXT_PUBLIC_ENABLE_DRIVE_INTEGRATION=true
