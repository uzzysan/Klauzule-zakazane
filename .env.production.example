# Application Settings
APP_NAME=FairPact
APP_ENV=production
DEBUG=False
API_V1_STR=/api/v1
PROJECT_NAME=FairPact

# Security
# Generate using: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_SECRET_KEY
# Generate using: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
ALLOWED_ORIGINS=https://fairpact.pl,https://www.fairpact.pl

# Database
POSTGRES_USER=postgres
# Generate using: openssl rand -hex 16
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fairpact
DATABASE_URL=postgresql://postgres:CHANGE_ME_POSTGRES_PASSWORD@postgres:5432/fairpact

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# Generate using: openssl rand -hex 16
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0

# MinIO Storage
MINIO_ENDPOINT=minio:9000
# Generate using: openssl rand -hex 12
MINIO_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS_KEY
# Generate using: openssl rand -hex 24
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET_KEY
MINIO_BUCKET_NAME=fairpact-uploads
MINIO_SECURE=False

# Helper used to encrypt/decrypt sensitive data in DB
# Generate using: openssl rand -base64 32
MASTER_KEY=CHANGE_ME_MASTER_KEY
# Generate using: openssl rand -base64 16
ENCRYPTION_SALT=CHANGE_ME_ENCRYPTION_SALT

# External Services (Optional / Not Required for Core Functionality)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GEMINI_API_KEY=
SENTRY_DSN=
